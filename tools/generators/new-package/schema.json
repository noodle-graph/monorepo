{
    "$schema": "http://json-schema.org/schema",
    "cli": "nx",
    "$id": "new-package",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Package name",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "pattern": "^[a-zA-Z]+(-[a-zA-Z]+)*$"
        }
    },
    "required": [
        "name"
    ]
}
