        "type": "git",
        "url": "git+https://github.com/noodle-graph/monorepo.git"
    },
    "main": "index.js",
    "bin": {
        "noodle": "./index.js"
    },
    "scripts": {
        "build": "tsc --project tsconfig.lib.json && cp package.json dist && node scripts/copyUi.mjs",
